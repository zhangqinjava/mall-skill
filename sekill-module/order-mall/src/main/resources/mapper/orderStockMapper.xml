<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zq.mapper.OrderStockMapper">

    <update id="updateStockDel" parameterType="com.zq.bean.order.OrderParam">
        update stock
        <set>
            <if test="goodsNum != null">
                good_number=good_number-#{goodNum},
            </if>
        </set>
        <where>
            <if test="goodsId != null">
                and good_id=#{goodsId}
            </if>
            and good_number>0;
        </where>
    </update>
    <update id="updateStockIncr" parameterType="com.zq.bean.order.OrderParam">
        update stock
        <set>
            <if test="goodsNum != null">
                good_number=good_number+#{goodNum},
            </if>
        </set>
        <where>
            <if test="goodsId != null">
                and good_id=#{goodsId}
            </if>
        </where>
    </update>
</mapper>